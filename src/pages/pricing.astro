---
// src/pages/pricing.astro
// Created: Pricing page with plans and comparison

import BaseLayout from '../layouts/BaseLayout.astro';
import Button from '../components/ui/Button.astro';
import Badge from '../components/ui/Badge.astro';
import Accordion from '../components/ui/Accordion';
import { PRICING_CATEGORIES, PRICING_FAQ, formatPrice } from '../lib/pricing-data';

// Transform FAQ data for Accordion component
const accordionItems = PRICING_FAQ.map((faq, index) => ({
  id: `faq-${index}`,
  title: faq.question,
  content: faq.answer,
  defaultOpen: index === 0,
}));
---

<BaseLayout
  title="Pricing"
  description="Lihat paket harga layanan digital marketing, web development, dan SEO dari Algan Studio. Transparan dan sesuai budget."
>
  {/* Hero Section */}
  <section class="relative pt-32 pb-16 md:pt-40 md:pb-20 overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-br from-[color:var(--color-bg-secondary)] via-[color:var(--color-bg-primary)] to-[color:var(--color-accent-subtle)]"></div>
    
    <div class="container relative z-10">
      <div class="max-w-3xl mx-auto text-center">
        <nav class="mb-6" aria-label="Breadcrumb">
          <ol class="flex items-center justify-center gap-2 text-sm text-[color:var(--color-text-muted)]">
            <li>
              <a href="/" class="hover:text-[color:var(--color-accent)] transition-colors">Home</a>
            </li>
            <li aria-hidden="true">/</li>
            <li>
              <span class="text-[color:var(--color-text-secondary)]">Pricing</span>
            </li>
          </ol>
        </nav>

        <h1 
          class="text-4xl md:text-5xl lg:text-6xl font-bold text-[color:var(--color-text-primary)] leading-tight mb-6"
          data-animate="fade-up"
        >
          Harga 
          <span class="text-[color:var(--color-accent)]">Transparan</span>
        </h1>

        <p 
          class="text-lg md:text-xl text-[color:var(--color-text-tertiary)] leading-relaxed mb-8"
          data-animate="fade-up"
          data-delay="0.1"
        >
          Pilih paket yang sesuai dengan kebutuhan dan budget bisnis Anda. 
          Semua harga bisa disesuaikan.
        </p>
      </div>
    </div>
  </section>

  {/* Pricing Categories */}
  {PRICING_CATEGORIES.map((category, categoryIndex) => (
    <section 
      id={category.id}
      class:list={[
        'section',
        categoryIndex % 2 === 1 && 'bg-[color:var(--color-bg-secondary)]',
      ]}
    >
      <div class="container">
        {/* Category Header */}
        <div class="text-center mb-12">
          <span class="text-[color:var(--color-accent)] text-sm font-semibold uppercase tracking-wider mb-2 block">
            {category.name}
          </span>
          <h2 class="text-2xl md:text-3xl font-bold text-[color:var(--color-text-primary)] mb-4">
            Paket {category.name}
          </h2>
          <p class="text-[color:var(--color-text-tertiary)] max-w-xl mx-auto">
            {category.description}
          </p>
        </div>

        {/* Pricing Cards */}
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 max-w-6xl mx-auto">
          {category.plans.map((plan, planIndex) => (
            <div 
              class:list={[
                'pricing-card relative p-6 rounded-2xl border transition-all duration-300',
                plan.popular 
                  ? 'bg-[color:var(--color-brand-primary)] text-white border-[color:var(--color-brand-primary)] scale-105 lg:scale-110 z-10 shadow-[var(--shadow-2xl)]'
                  : 'bg-[color:var(--color-bg-primary)] border-[color:var(--color-border)] hover:border-[color:var(--color-accent)]/30 hover:shadow-[var(--shadow-lg)]',
              ]}
              data-animate="fade-up"
              data-delay={String(planIndex * 0.1)}
            >
              {/* Popular badge */}
              {plan.popular && (
                <div class="absolute -top-3 left-1/2 -translate-x-1/2">
                  <span class="px-4 py-1 text-xs font-semibold bg-[color:var(--color-accent)] text-white rounded-full whitespace-nowrap">
                    Most Popular
                  </span>
                </div>
              )}

              {/* Plan name */}
              <h3 class:list={[
                'text-xl font-bold mb-2',
                plan.popular ? 'text-white' : 'text-[color:var(--color-text-primary)]',
              ]}>
                {plan.name}
              </h3>
              <p class:list={[
                'text-sm mb-6',
                plan.popular ? 'text-white/80' : 'text-[color:var(--color-text-tertiary)]',
              ]}>
                {plan.description}
              </p>

              {/* Price */}
              <div class="mb-6">
                <div class="flex items-baseline gap-1">
                  <span class:list={[
                    'text-3xl font-bold',
                    plan.popular ? 'text-white' : 'text-[color:var(--color-text-primary)]',
                  ]}>
                    {plan.price.monthly === 0 ? 'Custom' : formatPrice(plan.price.monthly)}
                  </span>
                  {plan.price.monthly > 0 && (
                    <span class:list={[
                      'text-sm',
                      plan.popular ? 'text-white/70' : 'text-[color:var(--color-text-muted)]',
                    ]}>
                      /bulan
                    </span>
                  )}
                </div>
                {plan.price.monthly > 0 && plan.price.yearly > 0 && (
                  <p class:list={[
                    'text-xs mt-1',
                    plan.popular ? 'text-white/60' : 'text-[color:var(--color-text-muted)]',
                  ]}>
                    {category.id === 'web-development' ? 'One-time payment' : `atau ${formatPrice(plan.price.yearly)}/tahun`}
                  </p>
                )}
              </div>

              {/* CTA Button */}
              <a
                href={plan.ctaLink}
                class:list={[
                  'block w-full py-3 px-4 text-center font-semibold rounded-xl transition-colors mb-6 touch-target',
                  plan.popular 
                    ? 'bg-white text-[color:var(--color-brand-primary)] hover:bg-white/90'
                    : 'bg-[color:var(--color-accent)] text-white hover:opacity-90',
                ]}
              >
                {plan.cta}
              </a>

              {/* Features */}
              <div class="space-y-3">
                <p class:list={[
                  'text-xs font-semibold uppercase tracking-wider',
                  plan.popular ? 'text-white/70' : 'text-[color:var(--color-text-muted)]',
                ]}>
                  Termasuk:
                </p>
                <ul class="space-y-2">
                  {plan.features.map((feature) => (
                    <li class="flex items-start gap-2 text-sm">
                      <svg 
                        class:list={[
                          'w-5 h-5 flex-shrink-0',
                          plan.popular ? 'text-green-300' : 'text-green-500',
                        ]}
                        fill="none" 
                        viewBox="0 0 24 24" 
                        stroke="currentColor"
                      >
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                      </svg>
                      <span class={plan.popular ? 'text-white/90' : 'text-[color:var(--color-text-secondary)]'}>
                        {feature}
                      </span>
                    </li>
                  ))}
                </ul>

                {/* Not included */}
                {plan.notIncluded && plan.notIncluded.length > 0 && (
                  <>
                    <div class:list={[
                      'h-px my-4',
                      plan.popular ? 'bg-white/20' : 'bg-[color:var(--color-border)]',
                    ]}></div>
                    <p class:list={[
                      'text-xs font-semibold uppercase tracking-wider',
                      plan.popular ? 'text-white/50' : 'text-[color:var(--color-text-muted)]',
                    ]}>
                      Tidak termasuk:
                    </p>
                    <ul class="space-y-2">
                      {plan.notIncluded.map((feature) => (
                        <li class="flex items-start gap-2 text-sm">
                          <svg 
                            class:list={[
                              'w-5 h-5 flex-shrink-0',
                              plan.popular ? 'text-white/40' : 'text-[color:var(--color-text-muted)]',
                            ]}
                            fill="none" 
                            viewBox="0 0 24 24" 
                            stroke="currentColor"
                          >
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                          </svg>
                          <span class={plan.popular ? 'text-white/50' : 'text-[color:var(--color-text-muted)]'}>
                            {feature}
                          </span>
                        </li>
                      ))}
                    </ul>
                  </>
                )}
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>
  ))}

  {/* Custom Quote Section */}
  <section class="section bg-[color:var(--color-brand-primary)] relative overflow-hidden">
    <div class="absolute inset-0 opacity-10">
      <div class="absolute inset-0" style="background-image: radial-gradient(circle at 2px 2px, white 1px, transparent 0); background-size: 24px 24px;"></div>
    </div>

    <div class="container relative z-10">
      <div class="max-w-2xl mx-auto text-center text-white">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">
          Butuh Paket Custom?
        </h2>
        <p class="text-lg text-white/80 mb-8">
          Setiap bisnis unik. Kami bisa membuat paket yang disesuaikan dengan 
          kebutuhan spesifik dan budget Anda.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <Button href="/contact" variant="secondary" size="lg">
            Minta Penawaran
          </Button>
          <Button 
            href="https://wa.me/6281234567890?text=Halo%20Algan%20Studio%2C%20saya%20ingin%20konsultasi%20tentang%20paket%20custom"
            variant="ghost"
            size="lg"
            class="text-white border-white/30 hover:bg-white/10"
          >
            Chat WhatsApp
          </Button>
        </div>
      </div>
    </div>
  </section>

  {/* FAQ Section */}
  <section class="section">
    <div class="container">
      <div class="max-w-2xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-2xl md:text-3xl font-bold text-[color:var(--color-text-primary)] mb-4">
            Pertanyaan Tentang Harga
          </h2>
          <p class="text-[color:var(--color-text-tertiary)]">
            Jawaban untuk pertanyaan yang sering ditanyakan tentang pricing kami.
          </p>
        </div>

        <div class="space-y-4">
          <Accordion client:visible items={accordionItems} variant="bordered" />
        </div>
      </div>
    </div>
  </section>

  {/* Trust Signals */}
  <section class="py-12 border-t border-[color:var(--color-border)]">
    <div class="container">
      <div class="flex flex-wrap justify-center gap-8 md:gap-12 text-center">
        <div>
          <p class="text-2xl font-bold text-[color:var(--color-text-primary)]">500+</p>
          <p class="text-sm text-[color:var(--color-text-muted)]">Projects Completed</p>
        </div>
        <div>
          <p class="text-2xl font-bold text-[color:var(--color-text-primary)]">98%</p>
          <p class="text-sm text-[color:var(--color-text-muted)]">Client Satisfaction</p>
        </div>
        <div>
          <p class="text-2xl font-bold text-[color:var(--color-text-primary)]">6+</p>
          <p class="text-sm text-[color:var(--color-text-muted)]">Years Experience</p>
        </div>
        <div>
          <p class="text-2xl font-bold text-[color:var(--color-text-primary)]">24/7</p>
          <p class="text-sm text-[color:var(--color-text-muted)]">Support Available</p>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  @media (prefers-reduced-motion: reduce) {
    .pricing-card {
      transition: none;
    }
  }

  /* Reset scale for medium screens */
  @media (max-width: 1023px) {
    .pricing-card.scale-105 {
      transform: none;
    }
  }
</style>