---
// src/pages/contact.astro
// Created: Contact page with form and contact information

import BaseLayout from '../layouts/BaseLayout.astro';
import ContactForm from '../components/contact/ContactForm.tsx';
import { SITE_CONFIG } from '../lib/constants';
---

<BaseLayout
  title="Contact Us"
  description="Hubungi Algan Studio untuk konsultasi gratis tentang digital marketing, web development, atau design project Anda."
>
  {/* Hero Section */}
  <section class="relative pt-32 pb-16 md:pt-40 md:pb-20 overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-br from-[color:var(--color-bg-secondary)] via-[color:var(--color-bg-primary)] to-[color:var(--color-accent-subtle)]"></div>
    
    <div class="container relative z-10">
      <div class="max-w-3xl mx-auto text-center">
        <nav class="mb-6" aria-label="Breadcrumb">
          <ol class="flex items-center justify-center gap-2 text-sm text-[color:var(--color-text-muted)]">
            <li>
              <a href="/" class="hover:text-[color:var(--color-accent)] transition-colors">Home</a>
            </li>
            <li aria-hidden="true">/</li>
            <li>
              <span class="text-[color:var(--color-text-secondary)]">Contact</span>
            </li>
          </ol>
        </nav>

        <h1 
          class="text-4xl md:text-5xl lg:text-6xl font-bold text-[color:var(--color-text-primary)] leading-tight mb-6"
          data-animate="fade-up"
        >
          Mari 
          <span class="text-[color:var(--color-accent)]">Bicara</span>
        </h1>

        <p 
          class="text-lg md:text-xl text-[color:var(--color-text-tertiary)] leading-relaxed"
          data-animate="fade-up"
          data-delay="0.1"
        >
          Punya project atau pertanyaan? Kami siap membantu. 
          Hubungi kami untuk konsultasi gratis.
        </p>
      </div>
    </div>
  </section>

  {/* Main Content */}
  <section class="section">
    <div class="container">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
        {/* Contact Info */}
        <div class="lg:col-span-1 space-y-6" data-animate="fade-up">
          {/* Quick Contact */}
          <div class="p-6 bg-[color:var(--color-bg-secondary)] rounded-2xl border border-[color:var(--color-border)]">
            <h2 class="text-lg font-semibold text-[color:var(--color-text-primary)] mb-4">
              Kontak Langsung
            </h2>
            
            <div class="space-y-4">
              {/* WhatsApp */}
              <a
                href={`https://wa.me/${SITE_CONFIG.whatsapp}?text=Halo%20Algan%20Studio`}
                target="_blank"
                rel="noopener noreferrer"
                class="flex items-center gap-4 p-3 rounded-xl hover:bg-[color:var(--color-bg-tertiary)] transition-colors group"
              >
                <div class="w-10 h-10 rounded-full bg-[#25D366]/10 flex items-center justify-center flex-shrink-0">
                  <svg class="w-5 h-5 text-[#25D366]" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
                  </svg>
                </div>
                <div>
                  <p class="text-sm font-medium text-[color:var(--color-text-primary)] group-hover:text-[#25D366] transition-colors">
                    WhatsApp
                  </p>
                  <p class="text-sm text-[color:var(--color-text-muted)]">
                    +62 812 3456 7890
                  </p>
                </div>
              </a>

              {/* Email */}
              <a
                href={`mailto:${SITE_CONFIG.email}`}
                class="flex items-center gap-4 p-3 rounded-xl hover:bg-[color:var(--color-bg-tertiary)] transition-colors group"
              >
                <div class="w-10 h-10 rounded-full bg-[color:var(--color-accent-subtle)] flex items-center justify-center flex-shrink-0">
                  <svg class="w-5 h-5 text-[color:var(--color-accent)]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                  </svg>
                </div>
                <div>
                  <p class="text-sm font-medium text-[color:var(--color-text-primary)] group-hover:text-[color:var(--color-accent)] transition-colors">
                    Email
                  </p>
                  <p class="text-sm text-[color:var(--color-text-muted)]">
                    {SITE_CONFIG.email}
                  </p>
                </div>
              </a>

              {/* Phone */}
              <a
                href={`tel:${SITE_CONFIG.phone}`}
                class="flex items-center gap-4 p-3 rounded-xl hover:bg-[color:var(--color-bg-tertiary)] transition-colors group"
              >
                <div class="w-10 h-10 rounded-full bg-blue-500/10 flex items-center justify-center flex-shrink-0">
                  <svg class="w-5 h-5 text-blue-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                  </svg>
                </div>
                <div>
                  <p class="text-sm font-medium text-[color:var(--color-text-primary)] group-hover:text-blue-500 transition-colors">
                    Phone
                  </p>
                  <p class="text-sm text-[color:var(--color-text-muted)]">
                    +62 21 1234 5678
                  </p>
                </div>
              </a>
            </div>
          </div>

          {/* Office Location */}
          <div class="p-6 bg-[color:var(--color-bg-secondary)] rounded-2xl border border-[color:var(--color-border)]">
            <h2 class="text-lg font-semibold text-[color:var(--color-text-primary)] mb-4">
              Lokasi Kantor
            </h2>
            
            <div class="flex items-start gap-4">
              <div class="w-10 h-10 rounded-full bg-emerald-500/10 flex items-center justify-center flex-shrink-0">
                <svg class="w-5 h-5 text-emerald-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              </div>
              <div>
                <p class="text-sm font-medium text-[color:var(--color-text-primary)] mb-1">
                  Jakarta Office
                </p>
                <p class="text-sm text-[color:var(--color-text-muted)] leading-relaxed">
                  Jl. Sudirman No. 123<br>
                  Karet Tengsin, Tanah Abang<br>
                  Jakarta Pusat 10220
                </p>
              </div>
            </div>

            {/* Map placeholder */}
            <div class="mt-4 aspect-video rounded-xl overflow-hidden bg-[color:var(--color-bg-tertiary)] flex items-center justify-center">
              <svg class="w-12 h-12 text-[color:var(--color-text-muted)] opacity-30" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7" />
              </svg>
            </div>
          </div>

          {/* Business Hours */}
          <div class="p-6 bg-[color:var(--color-bg-secondary)] rounded-2xl border border-[color:var(--color-border)]">
            <h2 class="text-lg font-semibold text-[color:var(--color-text-primary)] mb-4">
              Jam Operasional
            </h2>
            
            <div class="space-y-3">
              <div class="flex justify-between text-sm">
                <span class="text-[color:var(--color-text-muted)]">Senin - Jumat</span>
                <span class="text-[color:var(--color-text-primary)] font-medium">09:00 - 18:00</span>
              </div>
              <div class="flex justify-between text-sm">
                <span class="text-[color:var(--color-text-muted)]">Sabtu</span>
                <span class="text-[color:var(--color-text-primary)] font-medium">09:00 - 14:00</span>
              </div>
              <div class="flex justify-between text-sm">
                <span class="text-[color:var(--color-text-muted)]">Minggu</span>
                <span class="text-[color:var(--color-text-muted)]">Tutup</span>
              </div>
            </div>

            <p class="text-xs text-[color:var(--color-text-muted)] mt-4">
              * WhatsApp tersedia 24/7 untuk inquiry
            </p>
          </div>
        </div>

        {/* Contact Form */}
        <div class="lg:col-span-2" data-animate="fade-up" data-delay="0.1">
          <div class="p-8 bg-[color:var(--color-bg-secondary)] rounded-2xl border border-[color:var(--color-border)]">
            <h2 class="text-2xl font-bold text-[color:var(--color-text-primary)] mb-2">
              Kirim Pesan
            </h2>
            <p class="text-[color:var(--color-text-tertiary)] mb-8">
              Isi form di bawah dan tim kami akan menghubungi Anda dalam 1x24 jam.
            </p>
            
            <ContactForm client:load />
          </div>
        </div>
      </div>
    </div>
  </section>

  {/* FAQ Section */}
  <section class="section bg-[color:var(--color-bg-secondary)]">
    <div class="container">
      <div class="max-w-2xl mx-auto text-center mb-12">
        <h2 class="text-2xl md:text-3xl font-bold text-[color:var(--color-text-primary)] mb-4">
          Pertanyaan Umum
        </h2>
        <p class="text-[color:var(--color-text-tertiary)]">
          Beberapa pertanyaan yang sering ditanyakan.
        </p>
      </div>

      <div class="max-w-3xl mx-auto space-y-4">
        {[
          {
            question: 'Berapa lama waktu respons tim Algan Studio?',
            answer: 'Tim kami akan merespons inquiry dalam 1x24 jam pada hari kerja. Untuk urgent matters, silakan hubungi via WhatsApp.',
          },
          {
            question: 'Apakah konsultasi pertama gratis?',
            answer: 'Ya, kami menyediakan konsultasi awal gratis untuk memahami kebutuhan Anda dan memberikan rekomendasi yang tepat.',
          },
          {
            question: 'Berapa minimum budget untuk bekerja sama?',
            answer: 'Budget bervariasi tergantung layanan dan scope project. Hubungi kami untuk mendapatkan quotation yang sesuai kebutuhan Anda.',
          },
          {
            question: 'Apakah bisa meeting secara online?',
            answer: 'Tentu! Kami bisa meeting via Zoom, Google Meet, atau platform lain sesuai preferensi Anda.',
          },
        ].map((faq, index) => (
          <div 
            class="p-6 bg-[color:var(--color-bg-primary)] rounded-xl border border-[color:var(--color-border)]"
            data-animate="fade-up"
            data-delay={String(index * 0.1)}
          >
            <h3 class="text-base font-semibold text-[color:var(--color-text-primary)] mb-2">
              {faq.question}
            </h3>
            <p class="text-sm text-[color:var(--color-text-tertiary)]">
              {faq.answer}
            </p>
          </div>
        ))}
      </div>
    </div>
  </section>
</BaseLayout>

{/* ContactPage Schema */}
<script type="application/ld+json" set:html={JSON.stringify({
  "@context": "https://schema.org",
  "@type": "ContactPage",
  "name": "Contact Algan Studio",
  "description": "Hubungi Algan Studio untuk konsultasi digital marketing, web development, dan design.",
  "url": "https://algan.id/contact",
  "mainEntity": {
    "@type": "Organization",
    "name": "Algan Studio",
    "telephone": "+62-21-1234-5678",
    "email": "hello@algan.id",
    "address": {
      "@type": "PostalAddress",
      "streetAddress": "Jl. Sudirman No. 123",
      "addressLocality": "Jakarta Pusat",
      "postalCode": "10220",
      "addressCountry": "ID"
    },
    "openingHoursSpecification": [
      {
        "@type": "OpeningHoursSpecification",
        "dayOfWeek": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday"],
        "opens": "09:00",
        "closes": "18:00"
      },
      {
        "@type": "OpeningHoursSpecification",
        "dayOfWeek": "Saturday",
        "opens": "09:00",
        "closes": "14:00"
      }
    ]
  }
})} />