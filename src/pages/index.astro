---
// src/pages/index.astro
// Created: Homepage - Algan Studio main landing page

import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/home/Hero.astro';
import ServicesGrid from '../components/home/ServicesGrid.astro';
import FeaturedWork from '../components/home/FeaturedWork.astro';
import TestimonialsSection from '../components/home/TestimonialsSection.astro';
import StatsSection from '../components/home/StatsSection.astro';
import ClientLogos from '../components/home/ClientLogos.astro';
import ProcessSection from '../components/home/ProcessSection.astro';
import CTASection from '../components/home/CTASection.astro';
import { SITE_CONFIG } from '../lib/constants';
---

<BaseLayout
  title={undefined}
  description={SITE_CONFIG.description}
  image="/images/og-homepage.jpg"
>
  {/* Hero Section */}
  <Hero />

  {/* Client Logos Marquee */}
  <ClientLogos />

  {/* Services Overview */}
  <ServicesGrid />

  {/* Stats Section */}
  <StatsSection />

  {/* Featured Work / Portfolio */}
  <FeaturedWork />

  {/* How We Work / Process */}
  <ProcessSection />

  {/* Testimonials */}
  <TestimonialsSection />

  {/* Final CTA */}
  <CTASection />
</BaseLayout>