---
// src/pages/404.astro
// Created: Custom 404 error page

import BaseLayout from '../layouts/BaseLayout.astro';
import Button from '../components/ui/Button.astro';
---

<BaseLayout
  title="Page Not Found"
  description="The page you're looking for doesn't exist or has been moved."
>
  <section class="min-h-[80vh] flex items-center justify-center relative overflow-hidden">
    {/* Background */}
    <div class="absolute inset-0 bg-gradient-to-br from-[color:var(--color-bg-secondary)] via-[color:var(--color-bg-primary)] to-[color:var(--color-accent-subtle)]"></div>
    
    {/* Decorative elements */}
    <div class="absolute top-1/4 left-1/4 w-96 h-96 bg-[color:var(--color-accent)]/5 rounded-full blur-3xl"></div>
    <div class="absolute bottom-1/4 right-1/4 w-72 h-72 bg-[color:var(--color-brand-primary)]/5 rounded-full blur-3xl"></div>
    
    <div class="container relative z-10">
      <div class="max-w-2xl mx-auto text-center px-4">
        {/* 404 Number */}
        <div 
          class="text-[150px] md:text-[200px] font-bold leading-none text-transparent bg-clip-text bg-gradient-to-br from-[color:var(--color-accent)] to-[color:var(--color-brand-primary)] mb-4"
          data-animate="fade-up"
        >
          404
        </div>

        {/* Title */}
        <h1 
          class="text-2xl md:text-3xl font-bold text-[color:var(--color-text-primary)] mb-4"
          data-animate="fade-up"
          data-delay="0.1"
        >
          Halaman Tidak Ditemukan
        </h1>

        {/* Description */}
        <p 
          class="text-[color:var(--color-text-tertiary)] mb-8 max-w-md mx-auto"
          data-animate="fade-up"
          data-delay="0.2"
        >
          Maaf, halaman yang Anda cari tidak ada atau telah dipindahkan. 
          Mungkin Anda salah ketik URL atau halaman sudah dihapus.
        </p>

        {/* Actions */}
        <div 
          class="flex flex-col sm:flex-row gap-4 justify-center"
          data-animate="fade-up"
          data-delay="0.3"
        >
          <Button href="/" variant="primary" size="lg">
            <svg class="w-5 h-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
            </svg>
            Kembali ke Home
          </Button>
          <Button href="/contact" variant="secondary" size="lg">
            Hubungi Kami
          </Button>
        </div>

        {/* Quick Links */}
        <div 
          class="mt-12 pt-8 border-t border-[color:var(--color-border)]"
          data-animate="fade-up"
          data-delay="0.4"
        >
          <p class="text-sm text-[color:var(--color-text-muted)] mb-4">
            Atau coba halaman populer ini:
          </p>
          <div class="flex flex-wrap justify-center gap-4">
            <a 
              href="/services" 
              class="text-sm text-[color:var(--color-text-secondary)] hover:text-[color:var(--color-accent)] transition-colors"
            >
              Services
            </a>
            <span class="text-[color:var(--color-text-muted)]">•</span>
            <a 
              href="/work" 
              class="text-sm text-[color:var(--color-text-secondary)] hover:text-[color:var(--color-accent)] transition-colors"
            >
              Portfolio
            </a>
            <span class="text-[color:var(--color-text-muted)]">•</span>
            <a 
              href="/blog" 
              class="text-sm text-[color:var(--color-text-secondary)] hover:text-[color:var(--color-accent)] transition-colors"
            >
              Blog
            </a>
            <span class="text-[color:var(--color-text-muted)]">•</span>
            <a 
              href="/pricing" 
              class="text-sm text-[color:var(--color-text-secondary)] hover:text-[color:var(--color-accent)] transition-colors"
            >
              Pricing
            </a>
            <span class="text-[color:var(--color-text-muted)]">•</span>
            <a 
              href="/about" 
              class="text-sm text-[color:var(--color-text-secondary)] hover:text-[color:var(--color-accent)] transition-colors"
            >
              About
            </a>
          </div>
        </div>

        {/* Fun illustration placeholder */}
        <div class="mt-12 flex justify-center">
          <div class="relative">
            <svg 
              class="w-32 h-32 text-[color:var(--color-text-muted)] opacity-30"
              fill="none" 
              viewBox="0 0 24 24" 
              stroke="currentColor"
            >
              <path 
                stroke-linecap="round" 
                stroke-linejoin="round" 
                stroke-width="1" 
                d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" 
              />
            </svg>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  @keyframes float {
    0%, 100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-10px);
    }
  }

  @media (prefers-reduced-motion: no-preference) {
    [data-animate] svg {
      animation: float 3s ease-in-out infinite;
    }
  }
</style>