---
// src/pages/blog/[slug].astro
// Created: Dynamic blog post page template

import BaseLayout from '../../layouts/BaseLayout.astro';
import BlogPostHeader from '../../components/blog/BlogPostHeader.astro';
import BlogContent from '../../components/blog/BlogContent.astro';
import AuthorCard from '../../components/blog/AuthorCard.astro';
import ShareButtons from '../../components/blog/ShareButtons.astro';
import RelatedPosts from '../../components/blog/RelatedPosts.astro';
import BlogCTA from '../../components/blog/BlogCTA.astro';
import TableOfContents from '../../components/blog/TableOfContents.tsx';
import { BLOG_POSTS, getAllBlogSlugs, getBlogPost, getAuthor } from '../../lib/blog-data';

export async function getStaticPaths() {
  const slugs = getAllBlogSlugs();
  
  return slugs.map((slug) => ({
    params: { slug },
  }));
}

const { slug } = Astro.params;
const post = getBlogPost(slug as string);

if (!post) {
  return Astro.redirect('/404');
}

const author = getAuthor(post.author);
const currentUrl = Astro.url.href;

// Extract headings for TOC
function extractHeadings(content: string): { id: string; text: string; level: number }[] {
  const headings: { id: string; text: string; level: number }[] = [];
  const regex = /^(#{2,3}) (.*)$/gm;
  let match;
  
  while ((match = regex.exec(content)) !== null) {
    const text = match[2].trim();
    headings.push({
      id: text.replace(/[^\w\s-]/g, '').replace(/\s+/g, '-').toLowerCase(),
      text: text,
      level: match[1].length,
    });
  }
  
  return headings;
}

const tocItems = extractHeadings(post.content);
---

<BaseLayout
  title={post.title}
  description={post.excerpt}
  image={post.image}
  type="article"
>
  {/* Header */}
  <BlogPostHeader
    title={post.title}
    excerpt={post.excerpt}
    category={post.category}
    tags={post.tags}
    author={post.author}
    publishedAt={post.publishedAt}
    updatedAt={post.updatedAt}
    readingTime={post.readingTime}
    image={post.image}
    imageAlt={post.imageAlt}
  />

  {/* Main content area */}
  <section class="section-sm">
    <div class="container">
      <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-12">
        {/* Left sidebar - Share buttons (desktop only) */}
        <aside class="hidden lg:block lg:col-span-1">
          <div class="sticky top-24">
            <ShareButtons title={post.title} url={currentUrl} />
          </div>
        </aside>

        {/* Main content */}
        <article class="lg:col-span-7">
          <BlogContent content={post.content} />

          {/* Tags */}
          <div class="mt-8 pt-8 border-t border-[color:var(--color-border)]">
            <div class="flex flex-wrap gap-2">
              {post.tags.map((tag) => (
                <a
                  href={`/blog?tag=${encodeURIComponent(tag)}`}
                  class="px-3 py-1 text-sm bg-[color:var(--color-bg-secondary)] text-[color:var(--color-text-secondary)] rounded-full hover:bg-[color:var(--color-accent-subtle)] hover:text-[color:var(--color-accent)] transition-colors"
                >
                  #{tag}
                </a>
              ))}
            </div>
          </div>

          {/* Mobile share buttons */}
          <div class="lg:hidden mt-8 pt-8 border-t border-[color:var(--color-border)]">
            <span class="text-sm font-medium text-[color:var(--color-text-muted)] mb-4 block">Share this article</span>
            <div class="flex gap-2">
              <a
                href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(post.title)}&url=${encodeURIComponent(currentUrl)}`}
                target="_blank"
                rel="noopener noreferrer"
                class="w-10 h-10 rounded-full flex items-center justify-center bg-[color:var(--color-bg-secondary)] border border-[color:var(--color-border)] text-[color:var(--color-text-muted)] hover:bg-black hover:text-white hover:border-black transition-all"
              >
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                </svg>
              </a>
              <a
                href={`https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(currentUrl)}`}
                target="_blank"
                rel="noopener noreferrer"
                class="w-10 h-10 rounded-full flex items-center justify-center bg-[color:var(--color-bg-secondary)] border border-[color:var(--color-border)] text-[color:var(--color-text-muted)] hover:bg-[#0077B5] hover:text-white hover:border-[#0077B5] transition-all"
              >
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
                </svg>
              </a>
              <a
                href={`https://wa.me/?text=${encodeURIComponent(post.title)}%20${encodeURIComponent(currentUrl)}`}
                target="_blank"
                rel="noopener noreferrer"
                class="w-10 h-10 rounded-full flex items-center justify-center bg-[color:var(--color-bg-secondary)] border border-[color:var(--color-border)] text-[color:var(--color-text-muted)] hover:bg-[#25D366] hover:text-white hover:border-[#25D366] transition-all"
              >
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
                </svg>
              </a>
            </div>
          </div>

          {/* Author card */}
          {author && (
            <div class="mt-8 pt-8 border-t border-[color:var(--color-border)]">
              <h3 class="text-sm font-semibold text-[color:var(--color-text-muted)] uppercase tracking-wider mb-4">
                Written by
              </h3>
              <AuthorCard
                name={author.name}
                role={author.role}
                avatar={author.avatar}
                bio={author.bio}
                social={author.social}
              />
            </div>
          )}
        </article>

        {/* Right sidebar - TOC and Newsletter */}
        <aside class="lg:col-span-4">
          <div class="lg:sticky lg:top-24 space-y-6">
            {/* Table of Contents */}
            {tocItems.length > 0 && (
              <TableOfContents client:load items={tocItems} />
            )}

            {/* Newsletter signup */}
            <BlogCTA variant="inline" />
          </div>
        </aside>
      </div>
    </div>
  </section>

  {/* Related Posts */}
  <RelatedPosts currentSlug={post.slug} />

  {/* Newsletter CTA */}
  <BlogCTA variant="section" />
</BaseLayout>

{/* Article Schema markup */}
<script type="application/ld+json" set:html={JSON.stringify({
  "@context": "https://schema.org",
  "@type": "Article",
  "headline": post.title,
  "description": post.excerpt,
  "image": post.image,
  "datePublished": post.publishedAt,
  "dateModified": post.updatedAt || post.publishedAt,
  "author": {
    "@type": "Person",
    "name": author?.name || "Algan Studio Team",
    "url": "https://algan.id/about"
  },
  "publisher": {
    "@type": "Organization",
    "name": "Algan Studio",
    "logo": {
      "@type": "ImageObject",
      "url": "https://algan.id/images/logo.png"
    }
  },
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": currentUrl
  },
  "keywords": post.tags.join(", "),
  "articleSection": post.category,
  "wordCount": post.content.split(/\s+/).length,
  "timeRequired": `PT${post.readingTime}M`
})} />

{/* Breadcrumb Schema */}
<script type="application/ld+json" set:html={JSON.stringify({
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    {
      "@type": "ListItem",
      "position": 1,
      "name": "Home",
      "item": "https://algan.id"
    },
    {
      "@type": "ListItem",
      "position": 2,
      "name": "Blog",
      "item": "https://algan.id/blog"
    },
    {
      "@type": "ListItem",
      "position": 3,
      "name": post.title,
      "item": currentUrl
    }
  ]
})} />