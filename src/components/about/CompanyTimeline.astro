---
// src/components/about/CompanyTimeline.astro
// Created: Company milestones timeline component

import { COMPANY_MILESTONES } from '../../lib/team-data';
---

<section class="section">
  <div class="container">
    <div class="text-center mb-12">
      <span class="text-[color:var(--color-accent)] text-sm font-semibold uppercase tracking-wider mb-2 block">
        Journey
      </span>
      <h2 class="text-3xl md:text-4xl font-bold text-[color:var(--color-text-primary)] mb-4">
        Perjalanan Kami
      </h2>
      <p class="text-lg text-[color:var(--color-text-tertiary)] max-w-2xl mx-auto">
        Dari startup kecil hingga menjadi agency digital terkemuka di Indonesia.
      </p>
    </div>

    <div class="relative max-w-3xl mx-auto">
      {/* Timeline line */}
      <div class="absolute left-4 md:left-1/2 top-0 bottom-0 w-0.5 bg-[color:var(--color-border)] md:-translate-x-1/2"></div>

      {/* Milestones */}
      <div class="space-y-8">
        {COMPANY_MILESTONES.map((milestone, index) => (
          <div 
            class:list={[
              'timeline-item relative flex gap-6 md:gap-0',
              index % 2 === 0 ? 'md:flex-row' : 'md:flex-row-reverse',
            ]}
            data-animate="fade-up"
            data-delay={String(index * 0.1)}
          >
            {/* Dot */}
            <div class="absolute left-4 md:left-1/2 w-3 h-3 rounded-full bg-[color:var(--color-accent)] border-4 border-[color:var(--color-bg-primary)] -translate-x-1/2 z-10"></div>

            {/* Content */}
            <div class:list={[
              'flex-1 ml-8 md:ml-0',
              index % 2 === 0 ? 'md:pr-12 md:text-right' : 'md:pl-12',
            ]}>
              <div class="p-6 bg-[color:var(--color-bg-secondary)] rounded-xl border border-[color:var(--color-border)] hover:border-[color:var(--color-accent)]/30 transition-colors">
                <span class="inline-block px-3 py-1 text-sm font-semibold text-[color:var(--color-accent)] bg-[color:var(--color-accent-subtle)] rounded-full mb-3">
                  {milestone.year}
                </span>
                <h3 class="text-lg font-semibold text-[color:var(--color-text-primary)] mb-2">
                  {milestone.title}
                </h3>
                <p class="text-sm text-[color:var(--color-text-tertiary)]">
                  {milestone.description}
                </p>
              </div>
            </div>

            {/* Spacer for alternating layout */}
            <div class="hidden md:block flex-1"></div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  @media (prefers-reduced-motion: reduce) {
    .timeline-item {
      transition: none;
    }
  }
</style>