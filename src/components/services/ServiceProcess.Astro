---
// src/components/services/ServiceProcess.astro
// Created: Process timeline section for service pages

import SectionHeader from '../ui/SectionHeader.astro';
import ProcessStep from '../ui/ProcessStep.astro';

interface ProcessStepData {
  title: string;
  description: string;
  duration?: string;
}

interface Props {
  steps: ProcessStepData[];
  title?: string;
}

const { steps, title = 'Our Process' } = Astro.props;
---

<section class="section">
  <div class="container">
    <SectionHeader
      eyebrow="How It Works"
      title={title}
      description="A streamlined process designed to get you results fastâ€”no unnecessary steps or delays."
      titleAs="h2"
    />

    {/* Desktop: Horizontal timeline */}
    <div class="hidden lg:block mt-16">
      <div class="relative">
        {/* Connection line */}
        <div class="absolute top-8 left-0 right-0 h-0.5 bg-[color:var(--color-border)]" aria-hidden="true"></div>
        
        <div class="grid grid-cols-4 gap-6">
          {steps.map((step, index) => (
            <div class="relative" data-animate="fade-up" data-delay={String(index * 0.15)}>
              {/* Step number */}
              <div class="relative z-10 w-16 h-16 mx-auto mb-6 rounded-full bg-[color:var(--color-accent)] flex items-center justify-center text-white font-bold text-xl">
                {index + 1}
              </div>

              {/* Content */}
              <div class="text-center">
                {step.duration && (
                  <span class="inline-block px-3 py-1 mb-3 text-xs font-medium text-[color:var(--color-accent)] bg-[color:var(--color-accent-subtle)] rounded-full">
                    {step.duration}
                  </span>
                )}
                <h3 class="text-lg font-semibold text-[color:var(--color-text-primary)] mb-2">
                  {step.title}
                </h3>
                <p class="text-sm text-[color:var(--color-text-tertiary)] leading-relaxed">
                  {step.description}
                </p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>

    {/* Mobile/Tablet: Vertical timeline */}
    <div class="lg:hidden mt-12" data-stagger="0.15">
      {steps.map((step, index) => (
        <div data-stagger-item>
          <ProcessStep
            step={index + 1}
            title={step.title}
            description={step.description}
            isLast={index === steps.length - 1}
            variant="vertical"
          >
            {step.duration && (
              <span slot="badge" class="inline-block px-3 py-1 text-xs font-medium text-[color:var(--color-accent)] bg-[color:var(--color-accent-subtle)] rounded-full">
                {step.duration}
              </span>
            )}
          </ProcessStep>
        </div>
      ))}
    </div>
  </div>
</section>