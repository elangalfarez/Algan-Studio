---
// src/components/ui/TestimonialCard.astro
// Created: Testimonial card with avatar, quote, and attribution

interface Props {
  quote: string;
  name: string;
  role?: string;
  company?: string;
  avatar?: string;
  rating?: number;
  featured?: boolean;
  variant?: 'default' | 'compact' | 'large';
  class?: string;
}

const {
  quote,
  name,
  role,
  company,
  avatar,
  rating,
  featured = false,
  variant = 'default',
  class: className,
} = Astro.props;

// Get initials for avatar fallback
const getInitials = (name: string): string => {
  const parts = name.trim().split(/\s+/);
  if (parts.length >= 2) {
    return (parts[0][0] + parts[parts.length - 1][0]).toUpperCase();
  }
  return name.slice(0, 2).toUpperCase();
};

// Variant styles
const variantStyles = {
  default: {
    card: 'p-6 md:p-8',
    quote: 'text-base md:text-lg',
    avatar: 'w-12 h-12',
  },
  compact: {
    card: 'p-4 md:p-6',
    quote: 'text-sm md:text-base',
    avatar: 'w-10 h-10',
  },
  large: {
    card: 'p-8 md:p-10',
    quote: 'text-lg md:text-xl',
    avatar: 'w-14 h-14',
  },
};

const styles = variantStyles[variant];
---

<article
  class:list={[
    'testimonial-card',
    'bg-[color:var(--color-bg-tertiary)]',
    'border border-[color:var(--color-border)]',
    'rounded-2xl',
    'transition-all duration-[var(--duration-normal)]',
    'hover:shadow-[var(--shadow-lg)] hover:-translate-y-1',
    featured && 'ring-2 ring-[color:var(--color-accent)] ring-offset-2 ring-offset-[color:var(--color-bg-primary)]',
    styles.card,
    className,
  ]}
>
  {/* Quote icon */}
  <svg
    class="w-8 h-8 text-[color:var(--color-accent)]/30 mb-4"
    fill="currentColor"
    viewBox="0 0 24 24"
    aria-hidden="true"
  >
    <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z" />
  </svg>

  {/* Rating stars */}
  {rating && (
    <div class="flex items-center gap-1 mb-4" aria-label={`Rating: ${rating} out of 5 stars`}>
      {Array.from({ length: 5 }).map((_, index) => (
        <svg
          class:list={[
            'w-5 h-5',
            index < rating 
              ? 'text-amber-400 fill-amber-400' 
              : 'text-[color:var(--color-border)] fill-[color:var(--color-border)]',
          ]}
          viewBox="0 0 20 20"
          aria-hidden="true"
        >
          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
        </svg>
      ))}
    </div>
  )}

  {/* Quote text */}
  <blockquote class:list={[
    'text-[color:var(--color-text-secondary)] leading-relaxed mb-6',
    styles.quote,
  ]}>
    "{quote}"
  </blockquote>

  {/* Attribution */}
  <footer class="flex items-center gap-4">
    {/* Avatar */}
    <div class:list={[
      'flex-shrink-0 rounded-full overflow-hidden',
      'bg-[color:var(--color-accent-subtle)]',
      styles.avatar,
    ]}>
      {avatar ? (
        <img
          src={avatar}
          alt={`Photo of ${name}`}
          class="w-full h-full object-cover"
          loading="lazy"
          decoding="async"
        />
      ) : (
        <div class="w-full h-full flex items-center justify-center text-[color:var(--color-accent)] font-semibold text-sm">
          {getInitials(name)}
        </div>
      )}
    </div>

    {/* Name and details */}
    <div class="min-w-0">
      <cite class="not-italic font-semibold text-[color:var(--color-text-primary)] block">
        {name}
      </cite>
      {(role || company) && (
        <span class="text-sm text-[color:var(--color-text-muted)] block truncate">
          {role}{role && company && ' at '}{company}
        </span>
      )}
    </div>
  </footer>
</article>

<style>
  @media (prefers-reduced-motion: reduce) {
    .testimonial-card {
      transition: none;
    }
    
    .testimonial-card:hover {
      transform: none;
    }
  }
</style>