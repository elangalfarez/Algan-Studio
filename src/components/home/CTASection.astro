---
// src/components/home/CTASection.astro
// Created: Homepage call-to-action section with compelling copy

import Button from '../ui/Button.astro';
import { SITE_CONFIG } from '../../lib/constants';
---

<section
  class="section relative overflow-hidden"
  aria-label="Get started"
>
  {/* Background gradient */}
  <div class="absolute inset-0 bg-gradient-to-br from-[color:var(--color-brand-primary)] to-[color:var(--color-accent)]"></div>
  
  {/* Pattern overlay */}
  <div class="absolute inset-0 opacity-10">
    <div class="absolute inset-0" style="background-image: radial-gradient(circle at 2px 2px, white 1px, transparent 0); background-size: 32px 32px;"></div>
  </div>

  {/* Floating shapes */}
  <div class="absolute inset-0 overflow-hidden pointer-events-none" aria-hidden="true">
    <div class="absolute top-10 left-10 w-32 h-32 rounded-full bg-white/10 blur-2xl"></div>
    <div class="absolute bottom-10 right-10 w-48 h-48 rounded-full bg-white/10 blur-3xl"></div>
  </div>

  <div class="container relative z-10">
    <div class="max-w-3xl mx-auto text-center text-white">
      {/* Eyebrow */}
      <div
        class="inline-flex items-center gap-2 px-4 py-2 mb-6 rounded-full bg-white/10 border border-white/20"
        data-animate="fade-up"
      >
        <span class="text-sm font-medium">
          Ready to grow?
        </span>
      </div>

      {/* Headline */}
      <h2
        class="text-3xl md:text-4xl lg:text-5xl font-bold leading-tight mb-6"
        data-animate="fade-up"
        data-delay="0.1"
      >
        Let's Build Something
        <span class="block">Extraordinary Together</span>
      </h2>

      {/* Description */}
      <p
        class="text-lg md:text-xl text-white/80 mb-8 max-w-xl mx-auto"
        data-animate="fade-up"
        data-delay="0.2"
      >
        Book a free 30-minute strategy call. No pressure, no fluffâ€”just honest 
        insights on how we can help your brand grow.
      </p>

      {/* CTA Buttons */}
      <div
        class="flex flex-col sm:flex-row items-center justify-center gap-4"
        data-animate="fade-up"
        data-delay="0.3"
      >
        <a
          href="/contact"
          class="inline-flex items-center justify-center gap-2 px-8 py-4 bg-white text-[color:var(--color-brand-primary)] font-semibold rounded-xl hover:bg-white/90 transition-all duration-300 hover:shadow-lg hover:-translate-y-0.5 touch-target"
        >
          Schedule a Call
          <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
        <a
          href={`https://wa.me/${SITE_CONFIG.whatsapp.replace(/\D/g, '')}`}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center justify-center gap-2 px-8 py-4 bg-transparent text-white font-semibold rounded-xl border-2 border-white/30 hover:bg-white/10 hover:border-white/50 transition-all duration-300 touch-target"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
          </svg>
          Chat on WhatsApp
        </a>
      </div>

      {/* Trust badges */}
      <div
        class="mt-12 flex flex-wrap items-center justify-center gap-6 text-white/60 text-sm"
        data-animate="fade-up"
        data-delay="0.4"
      >
        <div class="flex items-center gap-2">
          <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <span>Free consultation</span>
        </div>
        <div class="flex items-center gap-2">
          <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <span>No commitment required</span>
        </div>
        <div class="flex items-center gap-2">
          <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <span>Response within 24h</span>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  @media (prefers-reduced-motion: reduce) {
    a:hover {
      transform: none;
    }
  }
</style>