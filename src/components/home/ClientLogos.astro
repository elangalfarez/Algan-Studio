---
// src/components/home/ClientLogos.astro
// Created: Homepage client logos marquee with infinite scroll

import Marquee from '../ui/Marquee.astro';
import { CLIENT_LOGOS } from '../../lib/constants';
---

<section
  class="py-12 md:py-16 bg-[color:var(--color-bg-secondary)] border-y border-[color:var(--color-border)]"
  aria-label="Our clients"
>
  <div class="container mb-6">
    <p class="text-center text-sm text-[color:var(--color-text-muted)] uppercase tracking-wider">
      Trusted by leading brands
    </p>
  </div>

  <Marquee speed="slow" gap="lg" pauseOnHover>
    {CLIENT_LOGOS.map((client) => (
      <div
        class="flex items-center justify-center w-32 md:w-40 h-12 px-4 grayscale opacity-60 hover:grayscale-0 hover:opacity-100 transition-all duration-300"
      >
        {/* Placeholder text logos - replace with actual SVG logos */}
        <div class="text-[color:var(--color-text-primary)] font-bold tracking-wide text-lg whitespace-nowrap">
          {client.name}
        </div>
        {/* Uncomment when logos are ready:
        <img
          src={client.logo}
          alt={`${client.name} logo`}
          class="max-h-full max-w-full object-contain"
          loading="lazy"
          decoding="async"
        />
        */}
      </div>
    ))}
  </Marquee>

  {/* Second row going opposite direction */}
  <div class="mt-6">
    <Marquee speed="slow" direction="right" gap="lg" pauseOnHover>
      {[...CLIENT_LOGOS].reverse().map((client) => (
        <div
          class="flex items-center justify-center w-32 md:w-40 h-12 px-4 grayscale opacity-60 hover:grayscale-0 hover:opacity-100 transition-all duration-300"
        >
          <div class="text-[color:var(--color-text-primary)] font-bold tracking-wide text-lg whitespace-nowrap">
            {client.name}
          </div>
        </div>
      ))}
    </Marquee>
  </div>
</section>