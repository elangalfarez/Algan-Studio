---
// src/components/home/StatsSection.astro
// Created: Homepage stats section with animated counters

import { STATS } from '../../lib/constants';
import StatsCounter from '../ui/StatsCounter.tsx';
---

<section
  class="section relative overflow-hidden"
  aria-label="Company statistics"
>
  {/* Background accent */}
  <div class="absolute inset-0 bg-gradient-to-r from-[color:var(--color-accent)]/5 via-transparent to-[color:var(--color-accent)]/5"></div>
  
  <div class="container relative">
    {/* Stats Grid */}
    <div class="grid grid-cols-2 lg:grid-cols-4 gap-8 md:gap-12">
      {STATS.map((stat, index) => (
        <div
          class="text-center"
          data-animate="fade-up"
          data-delay={String(index * 0.1)}
        >
          <StatsCounter
            client:visible
            value={stat.value}
            prefix={'prefix' in stat ? stat.prefix : ''}
            suffix={stat.suffix || ''}
            label={stat.label}
            description={stat.description}
            size="lg"
            align="center"
          />
        </div>
      ))}
    </div>

    {/* Optional decorative element */}
    <div class="mt-16 flex justify-center" data-animate="fade-up" data-delay="0.4">
      <div class="flex items-center gap-4 text-[color:var(--color-text-muted)]">
        <div class="w-16 h-px bg-gradient-to-r from-transparent to-[color:var(--color-border)]"></div>
        <span class="text-sm">Since 2018</span>
        <div class="w-16 h-px bg-gradient-to-l from-transparent to-[color:var(--color-border)]"></div>
      </div>
    </div>
  </div>
</section>