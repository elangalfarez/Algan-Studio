---
// src/components/global/Footer.astro
// Created: Footer with navigation, newsletter signup, and social links

import { NAVIGATION, SITE_CONFIG } from '../../lib/constants';
import Newsletter from './Newsletter';

const currentYear = new Date().getFullYear();
---

<footer class="bg-bg-inverse text-text-inverse pt-section-md pb-8">
  <div class="container">
    {/* Main Footer Grid */}
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-12 gap-12 lg:gap-8 pb-12 border-b border-white/10">
      {/* Brand Column */}
      <div class="lg:col-span-4">
        <a href="/" class="inline-flex items-center gap-2 text-h4 font-bold">
          <span>Algan</span>
          <span class="text-accent-light">Studio</span>
        </a>
        <p class="mt-4 text-body text-text-inverse/70 max-w-sm">
          {SITE_CONFIG.tagline} The go-to digital partner for ambitious brands who refuse to settle for mediocre.
        </p>
        
        {/* Social Links */}
        <div class="flex items-center gap-4 mt-6">
          <a
            href={SITE_CONFIG.social.instagram}
            target="_blank"
            rel="noopener noreferrer"
            class="p-2 rounded-full bg-white/10 text-text-inverse/70 hover:bg-white/20 hover:text-text-inverse transition-colors touch-target"
            aria-label="Follow us on Instagram"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
            </svg>
          </a>
          <a
            href={SITE_CONFIG.social.linkedin}
            target="_blank"
            rel="noopener noreferrer"
            class="p-2 rounded-full bg-white/10 text-text-inverse/70 hover:bg-white/20 hover:text-text-inverse transition-colors touch-target"
            aria-label="Follow us on LinkedIn"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
            </svg>
          </a>
          <a
            href={SITE_CONFIG.social.twitter}
            target="_blank"
            rel="noopener noreferrer"
            class="p-2 rounded-full bg-white/10 text-text-inverse/70 hover:bg-white/20 hover:text-text-inverse transition-colors touch-target"
            aria-label="Follow us on Twitter"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
            </svg>
          </a>
          <a
            href={SITE_CONFIG.social.youtube}
            target="_blank"
            rel="noopener noreferrer"
            class="p-2 rounded-full bg-white/10 text-text-inverse/70 hover:bg-white/20 hover:text-text-inverse transition-colors touch-target"
            aria-label="Subscribe on YouTube"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
            </svg>
          </a>
        </div>
      </div>

      {/* Services Links */}
      <div class="lg:col-span-2">
        <h3 class="text-small font-semibold uppercase tracking-wider text-text-inverse/50 mb-4">
          Services
        </h3>
        <ul class="space-y-3">
          {NAVIGATION.footer.services.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-body text-text-inverse/70 hover:text-text-inverse transition-colors"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      {/* Company Links */}
      <div class="lg:col-span-2">
        <h3 class="text-small font-semibold uppercase tracking-wider text-text-inverse/50 mb-4">
          Company
        </h3>
        <ul class="space-y-3">
          {NAVIGATION.footer.company.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-body text-text-inverse/70 hover:text-text-inverse transition-colors"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      {/* Newsletter */}
      <div class="lg:col-span-4">
        <h3 class="text-small font-semibold uppercase tracking-wider text-text-inverse/50 mb-4">
          Stay Updated
        </h3>
        <p class="text-body text-text-inverse/70 mb-4">
          Get digital marketing insights and industry news delivered to your inbox.
        </p>
        <Newsletter client:visible variant="minimal" />
      </div>
    </div>

    {/* Contact Info */}
    <div class="py-8 border-b border-white/10 grid grid-cols-1 md:grid-cols-3 gap-6">
      <div>
        <h4 class="text-small font-semibold text-text-inverse/50 mb-2">Address</h4>
        <p class="text-body text-text-inverse/70">
          {SITE_CONFIG.address.street}<br />
          {SITE_CONFIG.address.city}, {SITE_CONFIG.address.state}
        </p>
      </div>
      <div>
        <h4 class="text-small font-semibold text-text-inverse/50 mb-2">Contact</h4>
        <p class="text-body text-text-inverse/70">
          <a href={`mailto:${SITE_CONFIG.email}`} class="hover:text-text-inverse transition-colors">
            {SITE_CONFIG.email}
          </a><br />
          <a href={`tel:${SITE_CONFIG.phone}`} class="hover:text-text-inverse transition-colors">
            {SITE_CONFIG.phone}
          </a>
        </p>
      </div>
      <div>
        <h4 class="text-small font-semibold text-text-inverse/50 mb-2">Business Hours</h4>
        <p class="text-body text-text-inverse/70">
          Mon-Fri: {SITE_CONFIG.businessHours.weekdays}<br />
          Sat: {SITE_CONFIG.businessHours.saturday}
        </p>
      </div>
    </div>

    {/* Bottom Bar */}
    <div class="pt-8 flex flex-col md:flex-row items-center justify-between gap-4">
      <p class="text-small text-text-inverse/50">
        Â© {currentYear} {SITE_CONFIG.name}. All rights reserved.
      </p>
      <div class="flex items-center gap-6">
        {NAVIGATION.footer.legal.map((link) => (
          <a
            href={link.href}
            class="text-small text-text-inverse/50 hover:text-text-inverse transition-colors"
          >
            {link.label}
          </a>
        ))}
      </div>
    </div>
  </div>
</footer>