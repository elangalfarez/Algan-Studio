// src/components/blog/ShareButtons.astro
// Created: Social sharing buttons for blog posts

interface Props {
  title: string;
  url: string;
}

const { title, url } = Astro.props;

const encodedTitle = encodeURIComponent(title);
const encodedUrl = encodeURIComponent(url);

const shareLinks = [
