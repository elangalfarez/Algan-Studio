---
// src/components/blog/BlogPostHeader.astro
// Created: Header section for individual blog posts

import Badge from '../ui/Badge.astro';
import Avatar from '../ui/Avatar.astro';
import { getAuthor, BLOG_CATEGORIES } from '../../lib/blog-data';

interface Props {
  title: string;
  excerpt: string;
  category: string;
  tags: string[];
  author: string;
  publishedAt: string;
  updatedAt?: string;
  readingTime: number;
  image: string;
  imageAlt: string;
}

const { 
  title, 
  excerpt, 
  category, 
  tags,
  author: authorId, 
  publishedAt, 
  updatedAt,
  readingTime, 
  image, 
  imageAlt 
} = Astro.props;

const author = getAuthor(authorId);
const categoryLabel = BLOG_CATEGORIES.find(c => c.value === category)?.label || category;

// Format dates
const formattedDate = new Date(publishedAt).toLocaleDateString('id-ID', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});

const formattedUpdateDate = updatedAt 
  ? new Date(updatedAt).toLocaleDateString('id-ID', {
      year: 'numeric',
      month: 'long',
      day: 'numeric',
    })
  : null;
---

<header class="relative pt-32 pb-12 md:pt-40 md:pb-16 overflow-hidden">
  {/* Background */}
  <div class="absolute inset-0 bg-gradient-to-br from-[color:var(--color-bg-secondary)] via-[color:var(--color-bg-primary)] to-[color:var(--color-accent-subtle)]"></div>

  <div class="container relative z-10">
    <div class="max-w-4xl mx-auto">
      {/* Breadcrumb */}
      <nav class="mb-6" aria-label="Breadcrumb">
        <ol class="flex items-center gap-2 text-sm text-[color:var(--color-text-muted)]">
          <li>
            <a href="/" class="hover:text-[color:var(--color-accent)] transition-colors">Home</a>
          </li>
          <li aria-hidden="true">/</li>
          <li>
            <a href="/blog" class="hover:text-[color:var(--color-accent)] transition-colors">Blog</a>
          </li>
          <li aria-hidden="true">/</li>
          <li>
            <a href={`/blog?category=${category}`} class="hover:text-[color:var(--color-accent)] transition-colors">
              {categoryLabel}
            </a>
          </li>
        </ol>
      </nav>

      {/* Category & Tags */}
      <div class="flex flex-wrap items-center gap-2 mb-4">
        <Badge variant="primary">{categoryLabel}</Badge>
        {tags.slice(1, 3).map((tag) => (
          <Badge variant="secondary" size="sm">{tag}</Badge>
        ))}
      </div>

      {/* Title */}
      <h1 
        class="text-3xl md:text-4xl lg:text-5xl font-bold text-[color:var(--color-text-primary)] leading-tight mb-4"
        data-animate="fade-up"
      >
        {title}
      </h1>

      {/* Excerpt */}
      <p 
        class="text-lg md:text-xl text-[color:var(--color-text-tertiary)] mb-6 leading-relaxed"
        data-animate="fade-up"
        data-delay="0.1"
      >
        {excerpt}
      </p>

      {/* Meta info */}
      <div 
        class="flex flex-wrap items-center gap-6"
        data-animate="fade-up"
        data-delay="0.2"
      >
        {/* Author */}
        {author && (
          <div class="flex items-center gap-3">
            <Avatar
              name={author.name}
              src={author.avatar}
              size="md"
            />
            <div>
              <p class="font-medium text-[color:var(--color-text-primary)]">
                {author.name}
              </p>
              <p class="text-sm text-[color:var(--color-text-muted)]">
                {author.role}
              </p>
            </div>
          </div>
        )}

        {/* Divider */}
        <div class="hidden md:block w-px h-10 bg-[color:var(--color-border)]"></div>

        {/* Date & Reading time */}
        <div class="flex flex-wrap items-center gap-4 text-sm text-[color:var(--color-text-muted)]">
          <div class="flex items-center gap-2">
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
            <span>{formattedDate}</span>
          </div>
          
          {formattedUpdateDate && (
            <div class="flex items-center gap-2">
              <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
              </svg>
              <span>Updated {formattedUpdateDate}</span>
            </div>
          )}

          <div class="flex items-center gap-2">
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <span>{readingTime} min read</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>

{/* Featured Image */}
<div class="container relative -mt-6 md:-mt-8 z-20">
  <div class="max-w-4xl mx-auto">
    <div class="aspect-[16/9] rounded-2xl overflow-hidden bg-[color:var(--color-bg-secondary)] border border-[color:var(--color-border)] shadow-[var(--shadow-xl)]">
      {/* Placeholder - replace with actual image */}
      <div class="w-full h-full bg-gradient-to-br from-[color:var(--color-bg-secondary)] to-[color:var(--color-bg-tertiary)] flex items-center justify-center">
        <svg class="w-16 h-16 text-[color:var(--color-text-muted)] opacity-30" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
        </svg>
      </div>
      {/* Uncomment when images are ready
      <img
        src={image}
        alt={imageAlt}
        class="w-full h-full object-cover"
        loading="eager"
      />
      */}
    </div>
  </div>
</div>