---
// src/components/blog/AuthorCard.astro
// Created: Author information card for blog posts

import Avatar from '../ui/Avatar.astro';

interface Social {
  twitter?: string;
  linkedin?: string;
}

interface Props {
  name: string;
  role: string;
  avatar?: string;
  bio: string;
  social?: Social;
}

const { name, role, avatar, bio, social } = Astro.props;
---

<div class="p-6 bg-[color:var(--color-bg-secondary)] rounded-xl border border-[color:var(--color-border)]">
  <div class="flex items-start gap-4">
    <Avatar
      name={name}
      src={avatar}
      size="xl"
    />
    
    <div class="flex-1">
      <h4 class="font-semibold text-[color:var(--color-text-primary)]">
        {name}
      </h4>
      <p class="text-sm text-[color:var(--color-accent)] mb-2">
        {role}
      </p>
      <p class="text-sm text-[color:var(--color-text-tertiary)] leading-relaxed">
        {bio}
      </p>

      {/* Social links */}
      {social && (social.twitter || social.linkedin) && (
        <div class="flex items-center gap-3 mt-4">
          {social.twitter && (
            <a
              href={social.twitter}
              target="_blank"
              rel="noopener noreferrer"
              class="text-[color:var(--color-text-muted)] hover:text-[color:var(--color-accent)] transition-colors"
              aria-label={`${name} on Twitter`}
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
              </svg>
            </a>
          )}
          {social.linkedin && (
            <a
              href={social.linkedin}
              target="_blank"
              rel="noopener noreferrer"
              class="text-[color:var(--color-text-muted)] hover:text-[color:var(--color-accent)] transition-colors"
              aria-label={`${name} on LinkedIn`}
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
              </svg>
            </a>
          )}
        </div>
      )}
    </div>
  </div>
</div>