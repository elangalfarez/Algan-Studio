---
// src/components/blog/BlogCTA.astro
// Created: Newsletter signup CTA for blog

interface Props {
  variant?: 'inline' | 'section';
}

const { variant = 'section' } = Astro.props;
---

{variant === 'section' ? (
  <section class="section relative overflow-hidden bg-[color:var(--color-brand-primary)]">
    {/* Pattern */}
    <div class="absolute inset-0 opacity-10">
      <div class="absolute inset-0" style="background-image: radial-gradient(circle at 2px 2px, white 1px, transparent 0); background-size: 24px 24px;"></div>
    </div>

    <div class="container relative z-10">
      <div class="max-w-2xl mx-auto text-center text-white">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">
          Dapatkan Tips Terbaru
        </h2>
        <p class="text-lg text-white/80 mb-8">
          Subscribe newsletter kami untuk mendapatkan tips digital marketing, SEO, dan web development langsung di inbox Anda.
        </p>

        <form class="flex flex-col sm:flex-row gap-3 max-w-md mx-auto" action="#" method="POST">
          <input
            type="email"
            name="email"
            placeholder="Email Anda"
            required
            class="flex-1 px-4 py-3 rounded-xl bg-white/10 border border-white/20 text-white placeholder:text-white/60 focus:outline-none focus:ring-2 focus:ring-white/30 touch-target"
          />
          <button
            type="submit"
            class="px-6 py-3 bg-white text-[color:var(--color-brand-primary)] font-semibold rounded-xl hover:bg-white/90 transition-colors touch-target whitespace-nowrap"
          >
            Subscribe
          </button>
        </form>

        <p class="text-sm text-white/60 mt-4">
          Tidak ada spam. Unsubscribe kapan saja.
        </p>
      </div>
    </div>
  </section>
) : (
  <div class="p-6 bg-[color:var(--color-accent-subtle)] rounded-xl border border-[color:var(--color-accent)]/20">
    <h3 class="text-lg font-semibold text-[color:var(--color-text-primary)] mb-2">
      ðŸ“¬ Jangan Ketinggalan Update
    </h3>
    <p class="text-sm text-[color:var(--color-text-tertiary)] mb-4">
      Dapatkan tips dan insight terbaru langsung di inbox Anda.
    </p>

    <form class="flex flex-col gap-3" action="#" method="POST">
      <input
        type="email"
        name="email"
        placeholder="Email Anda"
        required
        class="w-full px-4 py-3 rounded-lg bg-[color:var(--color-bg-primary)] border border-[color:var(--color-border)] text-[color:var(--color-text-primary)] placeholder:text-[color:var(--color-text-muted)] focus:outline-none focus:ring-2 focus:ring-[color:var(--color-accent)] touch-target"
      />
      <button
        type="submit"
        class="w-full px-4 py-3 bg-[color:var(--color-accent)] text-white font-semibold rounded-lg hover:opacity-90 transition-opacity touch-target"
      >
        Subscribe
      </button>
    </form>

    <p class="text-xs text-[color:var(--color-text-muted)] mt-3">
      Tidak ada spam. Unsubscribe kapan saja.
    </p>
  </div>
)}